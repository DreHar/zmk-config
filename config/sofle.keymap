#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

&sl {
    release-after-ms = <500>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   \   |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
// | LCTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   | ENTER |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//               | GUI | ALT  | ALT  | LOWER|  GUI   |  | ALT   | SPACE| ALT   | ALT   | GUI  |
            bindings = <
&kp ESC   &kp N1 &kp N2   &kp N3   &kp N4    &kp N5                      &kp N6    &kp N7    &kp N8    &kp N9   &kp N0   &kp BSLH
&kp TAB   &kp Q  &kp W    &kp E    &kp R     &kp T                       &kp Y     &kp U     &kp I     &kp O    &kp P    &kp BSPC
&kp LCTRL &kp A  &kp S    &kp D    &kp F     &kp G                       &kp H     &kp J     &kp K     &kp L    &kp SEMI &kp RET
&kp LSHFT &kp Z  &kp X    &kp C    &kp V     &kp B  &kp C_MUTE &none     &kp N     &kp M     &kp COMMA &kp DOT  &kp FSLH &kp RSHFT
                 &kp LGUI &kp LALT &kp LALT  &sl 1  &kp LGUI   &kp RALT  &kp SPACE &kp RALT  &kp RALT  &kp RGUI
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |  F12  |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// | PSCRN |  (  |  )  |  "   |  _   |  +   |                   | HOME | PGDN  | PGUP  | END  | BRIUP |  DEL  |
// |       |  [  |  ]  |  '   |  -   |  =   |                   |  <-  |   v   |   ^   |  ->  | BRIDN |       |
// |       |  {  |  }  |  `   |  ~   |      |        |  |       | BT0  | BT1   | BT2   | BT3  | BT4   |       |
//               |     |      |      |      |        |  |       |      |       |       |BTCLR |
            bindings = <
&kp F12   &kp F1    &kp F2    &kp F3    &kp F4    &kp F5                    &kp F6      &kp F7      &kp F8      &kp F9      &kp F10      &kp F11
&kp PSCRN &kp LPAR  &kp RPAR  &kp DQT   &kp UNDER &kp PLUS                  &kp HOME    &kp PG_DN   &kp PG_UP   &kp END     &kp C_BRI_UP &kp DEL
&trans    &kp LBKT  &kp RBKT  &kp SQT   &kp MINUS &kp EQUAL                 &kp LEFT    &kp DOWN    &kp UP      &kp RIGHT   &kp C_BRI_DN &trans
&trans    &kp LBRC  &kp RBRC  &kp GRAVE &kp TILDE &trans    &trans   &trans &bt BT_SEL0 &bt BT_SEL1 &bt BT_SEL2 &bt BT_SEL3 &bt BT_SEL4  &trans
                    &trans    &trans    &trans    &trans    &trans   &trans &trans      &trans      &trans      &bt BT_CLR
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};
